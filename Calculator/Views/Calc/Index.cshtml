@model Calculator.Models.calc
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>

<head>


</head>

<body>
    <h4>Калькулятор</h4>
    <div class="row">
        @using (Html.BeginForm("/Index", "calc", FormMethod.Post))
        {

            <div class="form-group">
                <label for="no1">Введите первое число:</label>
                <input type="text" class="form-control" id="no1" name="no1" value="@Model.no1" />
            </div>            

            <div class="form-group">
                <label for="no2">Введите второе число:</label>
                <input type="text" class="form-control" id="no2" name="no2" value="@Model.no2" />
            </div>

            <button type="submit" class="btn btn-danger" id="add" value="add" name="calculate">+</button>

            <button type="submit" class="btn btn-info" id="min" value="min" name="calculate">-</button>

            <button type="submit" class="btn btn-default" id="sub" value="sub" name="calculate">*</button>

            <button type="submit" class="btn btn-warning" id="divv" value="divv" name="calculate">/</button>

            <button type="submit" class="btn btn-primary" id="down" value="down" name="calculate">C</button>


            <div class="form-group">
                <label for="total">Результат:</label>
                <input type="text" class="form-control" id="tot" name="tot" value="@Model.tot" />
            </div>




        }

    </div>
</body>




</html>

